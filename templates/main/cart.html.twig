{% extends 'base/_layout.html.twig' %}

{% block bodycontent %}
    <div class="container">
        <div class="main-column">
            <div class="section payment-section">
                <div class="payment-methods">

                </div>
                <div class="assortment">
                    {% for item in attribute(assortment, locale) %}
                        <div class="cart-assortment-item">
                            <img class="item-image" src="{{ item.img }}" />
                            <div>
                                <h1>{{ item.name }}</h1>
                                <h1 class="price">{{ item.price  }}</h1>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts_extra %}
    <script>
        let locale = "{{ locale }}";
    </script>
{% endblock %}
